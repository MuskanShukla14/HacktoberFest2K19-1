#include<stdio.h>
int main()
{
    int i,a[100],sum=0,n;
    printf("enter amount you want to enter");
    scanf("%d",&n);
    printf("enter there elements");
    for(i=0;i<n;i++)
    {
     scanf("%d",&a[i]);
     sum+=a[i];
    }
    printf("array element in ascending order is \n  ");
    for(int i=0;i<=sum;i++)
    {
        for(int j=0;j<n;j++)
        {
            if(a[j]==i)
                printf("%d ",a[j]);
        }
    }
    printf("\n");
    printf("array element in dscending order is \n  ");
 for(int i=sum;i>=0;i--)
    {
        for(int j=0;j<n;j++)
        {
            if(a[j]==i)
                printf("%d ",a[j]);
        }
    }
return 0;
}
